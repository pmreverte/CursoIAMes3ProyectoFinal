<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Aplicación de gestión de tareas" />
    <meta name="author" content="TaskApp" />
    <title>@ViewData["Title"] - TaskApp</title>

    @* Include Bootstrap CSS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @* Include Bootstrap Icons CSS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    @* Add custom CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @*This section is for adding other stylesheets*@ <!-- Optional section for additional styles -->
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4"> <!-- Navigation bar -->
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Tasks")">
                    <i class="bi bi-check2-square me-2"></i>TaskApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               aria-current="page" href="@Url.Action("Index", "Tasks")">
                                <i class="bi bi-list-check me-1"></i>Tareas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")" 
                               href="@Url.Action("Create", "Tasks")">
                                <i class="bi bi-plus-circle me-1"></i>Nueva Tarea
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" 
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Opciones
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Perfil</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-sliders me-2"></i>Preferencias</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-question-circle me-2"></i>Ayuda</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @* Main content container *@
    <div class="container">
        <main role="main" class="pb-3">
            @* Your page content goes here *@
            @RenderBody() <!-- Render the body of the page -->
        </main>
    </div>

    @* Footer *@
    <footer class="border-top footer text-muted"> <!-- Footer section -->
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - TaskApp - Todos los derechos reservados
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-decoration-none text-muted me-3">
                        <i class="bi bi-shield-check me-1"></i>Privacidad
                    </a>
                    <a href="#" class="text-decoration-none text-muted me-3">
                        <i class="bi bi-file-text me-1"></i>Términos
                    </a>
                    <a href="#" class="text-decoration-none text-muted">
                        <i class="bi bi-question-circle me-1"></i>Ayuda
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @* Include Bootstrap JS *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @* Add custom JS *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*This section is for adding other scripts*@ <!-- Optional section for additional scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
